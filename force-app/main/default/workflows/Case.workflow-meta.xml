<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>High_15_min_of_investigation_left_before_Escalation</fullName>
        <description>High-15 minutes of investigation left before Escalation</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Case_before_escalation</template>
    </alerts>
    <alerts>
        <fullName>High_1_day_of_investigation_left_before_Escalation</fullName>
        <description>High-1 day of investigation left before Escalation</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Case_before_escalation</template>
    </alerts>
    <alerts>
        <fullName>Medium_1_day_of_investigation_left_before_Escalation</fullName>
        <description>Medium-1 day of investigation left before Escalation</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Case_before_escalation</template>
    </alerts>
    <alerts>
        <fullName>Meidum_1_hour_of_investigation_left_before_Escalation</fullName>
        <description>Medium-1 hour of investigation left before Escalation</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Case_before_escalation</template>
    </alerts>
    <alerts>
        <fullName>Send_an_email_case_closed</fullName>
        <description>Send an email when a case is closed or abandoned</description>
        <protected>false</protected>
        <recipients>
            <field>ContactEmail</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Auto_Response_Close</template>
    </alerts>
    <alerts>
        <fullName>Send_an_email_when_a_case_is_open</fullName>
        <description>Send an email when a case is open</description>
        <protected>false</protected>
        <recipients>
            <field>ContactEmail</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>GDOC_Email_Template/SUPPORT_Auto_Response_New</template>
    </alerts>
    <fieldUpdates>
        <fullName>CaseUpdateTier1ToTier2</fullName>
        <description>Cases not closed or escalated yet are escalated to GDOC Software Tier 2.</description>
        <field>OwnerId</field>
        <lookupValue>GDOC_Software_Tier_2</lookupValue>
        <lookupValueType>Queue</lookupValueType>
        <name>[Case] UpdateTier1ToTier2</name>
        <notifyAssignee>true</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>AutoEmailToContactCaseClosed</fullName>
        <actions>
            <name>Send_an_email_case_closed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>When a case is closed (or abandoned), an email is sent to the case&apos;s contact.</description>
        <formula>OR(ISPICKVAL(Status, &quot;Closed&quot;),ISPICKVAL(Status, &quot;Abandoned&quot;) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>AutoEmailToContactCaseNew</fullName>
        <actions>
            <name>Send_an_email_when_a_case_is_open</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>When a case is opened, an email is sent to the case&apos;s contact.</description>
        <formula>NOT(ISPICKVAL(Status, &quot;Abandoned&quot;))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
